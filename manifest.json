{
  "manifest_version": 3,
  "name": "智能下载管理器",
  "version": "1.0",
  "description": "自动分类下载文件，并在管理页查看与操作下载记录。",
  "permissions": [
    "downloads",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打开下载管理器",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
